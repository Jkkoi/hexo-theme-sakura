<% if (pagination == 2){ %>
  <!-- 首页默认取最最新文章集 -->
  <% page.posts.sort('date', site.data.sakura.homePageSortType).limit(site.data.sakura.homeArticleShown).each(function(post, index){ %>
    <%- partial('_widget/index-items', {index: index, post: post}) %>
  <% }) %>
<% } else { %>
  <% page.posts.each(function(post, index){ %>
    <%- partial('_widget/index-items', {index: index, post: post}) %>
  <% }) %>
<% } %>
